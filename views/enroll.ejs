<%- include('partials/header') %>

    <!-- 报名页面主要内容 -->
    <main class="min-vh-100 bg-light py-5">
        <div class="container">
            <!-- 页面标题 -->
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8 text-center">
                    <h1 class="display-4 text-primary mb-3">课程报名</h1>
                    <p class="lead text-muted">填写下方表单完成报名申请，我们将在24小时内与您联系确认详情。</p>
                </div>
            </div>

            <div class="row justify-content-center">
                <!-- 课程信息卡片 -->
                <div class="col-lg-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-book-open me-2"></i>课程信息
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-primary">
                                <%= course.title %>
                            </h6>
                            <div class="mb-3">
                                <small class="text-muted">课程描述</small>
                                <p class="card-text">
                                    <%= course.description %>
                                </p>
                            </div>

                            <div class="row g-3">
                                <div class="col-6">
                                    <small class="text-muted">适合年龄</small>
                                    <div class="fw-bold">
                                        <%= course.age_range %>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">课程费用</small>
                                    <div class="fw-bold text-success">¥<%= course.price %>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">课程时长</small>
                                    <div class="fw-bold">
                                        <%= course.duration %>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">班级人数</small>
                                    <div class="fw-bold">
                                        <%= course.class_size %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 报名表单 -->
                <div class="col-lg-6">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-user-plus me-2"></i>报名表单
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            <form action="/enroll/<%= course.id %>" method="POST" id="enrollForm">
                                <!-- 学生信息 -->
                                <div class="mb-4">
                                    <h6 class="text-primary border-bottom pb-2 mb-3">
                                        <i class="fas fa-child me-2"></i>学生信息
                                    </h6>

                                    <div class="mb-3">
                                        <label for="student_name" class="form-label">学生姓名 <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="student_name" name="student_name"
                                            required placeholder="请输入学生姓名">
                                    </div>

                                    <div class="mb-3">
                                        <label for="student_age" class="form-label">学生年龄 <span
                                                class="text-danger">*</span></label>
                                        <select class="form-select" id="student_age" name="student_age" required>
                                            <option value="">请选择年龄</option>
                                            <option value="5">5岁</option>
                                            <option value="6">6岁</option>
                                            <option value="7">7岁</option>
                                            <option value="8">8岁</option>
                                            <option value="9">9岁</option>
                                            <option value="10">10岁</option>
                                            <option value="11">11岁</option>
                                            <option value="12">12岁</option>
                                            <option value="13">13岁</option>
                                            <option value="14">14岁</option>
                                            <option value="15">15岁</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- 家长信息 -->
                                <div class="mb-4">
                                    <h6 class="text-primary border-bottom pb-2 mb-3">
                                        <i class="fas fa-users me-2"></i>家长信息
                                    </h6>

                                    <div class="mb-3">
                                        <label for="parent_name" class="form-label">家长姓名 <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="parent_name" name="parent_name"
                                            required placeholder="请输入家长姓名">
                                    </div>

                                    <div class="mb-3">
                                        <label for="parent_phone" class="form-label">联系电话 <span
                                                class="text-danger">*</span></label>
                                        <input type="tel" class="form-control" id="parent_phone" name="parent_phone"
                                            required placeholder="请输入手机号码" pattern="^1[3-9]\d{9}$">
                                        <div class="form-text">请输入有效的11位手机号码</div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="parent_email" class="form-label">邮箱地址</label>
                                        <input type="email" class="form-control" id="parent_email" name="parent_email"
                                            placeholder="请输入邮箱地址（选填）">
                                    </div>
                                </div>

                                <!-- 备注信息 -->
                                <div class="mb-4">
                                    <label for="notes" class="form-label">
                                        <i class="fas fa-sticky-note me-2"></i>备注信息
                                    </label>
                                    <textarea class="form-control" id="notes" name="notes" rows="3"
                                        placeholder="如有特殊需求或问题，请在此说明..."></textarea>
                                </div>

                                <!-- 提交按钮 -->
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-paper-plane me-2"></i>提交报名申请
                                    </button>
                                    <a href="/courses" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>返回课程列表
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- 表单验证 JavaScript -->
    <script>
        document.getElementById('enrollForm').addEventListener('submit', function (e) {
            const phone = document.getElementById('parent_phone').value
            const phonePattern = /^1[3-9]\d{9}$/

            if (!phonePattern.test(phone)) {
                e.preventDefault()
                alert('请输入有效的11位手机号码')
                document.getElementById('parent_phone').focus()
                return false
            }

            return true
        });
    </script>

    <%- include('partials/footer') %>