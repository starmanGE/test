<%- include('partials/header', { pageTitle: pageTitle }) %>

    <style>
        /* 建议将以下所有CSS代码移动到您的 /public/css/style.css 文件中 */

        /* 动画定义 */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-30px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* 英雄区域 (Hero Section) */
        .travel-hero {
            background: linear-gradient(135deg, rgba(74, 144, 226, 0.9), rgba(80, 201, 195, 0.9)),
                        url('https://images.unsplash.com/photo-1469474968028-56623f02e42e?q=80&w=2940&auto=format&fit=crop') center/cover;
            color: white;
            padding: 8rem 0 6rem;
            position: relative;
            overflow: hidden;
        }

        .travel-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(74, 144, 226, 0.1), rgba(80, 201, 195, 0.1));
            animation: fadeInUp 2s ease-out;
        }

        .travel-hero-content {
            position: relative;
            z-index: 2;
            animation: slideInLeft 1s ease-out;
        }

        .travel-hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            margin-bottom: 1.5rem;
        }

        .travel-hero p {
            font-size: 1.25rem;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
            margin-bottom: 2rem;
        }

        /* 目的地卡片 */
        .destination-section {
            padding: 6rem 0;
            background: #f8f9fa;
        }

        .destination-card {
            background: white;
            border-radius: 1.5rem;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            animation: fadeInUp 0.8s ease-out backwards;
            height: 100%;
        }

        .destination-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .destination-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .destination-card:hover img {
            transform: scale(1.05);
        }

        .destination-info {
            padding: 2rem;
        }

        .destination-info h4 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        .destination-info p {
            color: #6c757d;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .destination-price {
            font-size: 1.25rem;
            font-weight: 700;
            color: #e74c3c;
            margin-bottom: 1rem;
        }

        .destination-duration {
            font-size: 0.9rem;
            color: #95a5a6;
            margin-bottom: 1.5rem;
        }

        /* 旅行类型 */
        .travel-types {
            padding: 6rem 0;
            background: white;
        }

        .travel-type-card {
            text-align: center;
            padding: 3rem 2rem;
            border-radius: 1.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            height: 100%;
            transition: all 0.3s ease;
            animation: fadeInUp 0.8s ease-out backwards;
        }

        .travel-type-card:nth-child(2) .travel-type-card {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            animation-delay: 0.2s;
        }

        .travel-type-card:nth-child(3) .travel-type-card {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            animation-delay: 0.4s;
        }

        .travel-type-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        .travel-type-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
        }

        .travel-type-card h4 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        /* 特色服务 */
        .features-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .feature-item {
            text-align: center;
            padding: 2rem;
            animation: fadeInUp 0.8s ease-out backwards;
        }

        .feature-item:nth-child(2) { animation-delay: 0.2s; }
        .feature-item:nth-child(3) { animation-delay: 0.4s; }
        .feature-item:nth-child(4) { animation-delay: 0.6s; }

        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            opacity: 0.9;
        }

        .feature-item h4 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        /* 行动号召 */
        .cta-section {
            padding: 6rem 0;
            background: #2c3e50;
            color: white;
            text-align: center;
        }

        .cta-section h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .cta-section p {
            font-size: 1.25rem;
            margin-bottom: 3rem;
            opacity: 0.9;
        }

        .btn-travel {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 1rem 3rem;
            font-size: 1.25rem;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-travel:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
            color: white;
        }

        /* 响应式设计 */
        @media (max-width: 768px) {
            .travel-hero h1 {
                font-size: 2.5rem;
            }

            .travel-hero {
                padding: 6rem 0 4rem;
            }

            .destination-section,
            .travel-types,
            .features-section,
            .cta-section {
                padding: 4rem 0;
            }
        }
    </style>

